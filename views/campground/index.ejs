<div id="cluster-map"></div>

<h1>All Campgrounds</h1>

<!-- <a href="/campgrounds/new">Add Campground</a> -->

<!-- <ul> -->
<% for (let camp of campgrounds){ %>

<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if(camp.images.length){ %>
      <img class="img-fluid" src="<%= camp.images[0].url %>" alt="" />
      <% }else { %>
      <img
        class="img-fluid"
        src="https://res.cloudinary.com/dcw099zps/image/upload/v1705572987/YelpCamp/evrmrxurvtiwjgghzmcn.png"
        alt=""
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location %></small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>"
          >View <%= camp.title %></a
        >
      </div>
    </div>
  </div>
</div>
<!-- <li><a href="/campgrounds/<%= camp.id  %>"><%= camp.title  %></a></li> -->
<% } %>
<!-- </ul> -->

